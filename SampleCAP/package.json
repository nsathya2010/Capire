{
  "name": "SampleCAP",
  "version": "0.0.1",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "description": "Business Application",
  "engines": {
    "node": "^16"
  },
  "dependencies": {
    "@sap/cds": "^7",
    "@sap/audit-logging": "^5",
    "hdb": "^0.19",
    "@sap/cds-odata-v2-adapter-proxy": "^1",

    "@sap-cloud-sdk/http-client": "^2.5",
    "@sap/xsenv": "^3",
    "@sap/xssec": "^3",
    "passport": "^0.4.1",

    "cf-nodejs-logging-support": "^6",
    "debug": "^4.3",
    "express": "^4"
  },
  "devDependencies": {    
    "@sap/ux-specification": "^1.108.5",
    "@cap-js/sqlite": "^1.0.0"
  },
  "sapux": [
    "app/resources/fiori"
  ],
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "joe": {
              "roles": [
                "Admin",
                "Viewer"
              ]
            },
            "julie": {
              "roles": [
                "Viewer"
              ]
              ,
              "attr": {
                "Region": [
                  "North America",
                  "Asia"
                ]
              }
            },
            "bob": {
              "roles": [
                "Viewer"
              ]
              ,
              "attr": {
                "Region": [
                  "Europe"
                ]
              }
            }
          }
        }
      }
      ,
      "db": {
        "[production]": {
          "kind": "hana-cloud",
          "credentials": {
            "database": "sample"
          }
          ,"model": [
            "db/data-config",
            "db/data-test"
          ]
        },
        "[development]": {
          "kind": "sql"
          ,"model": [
            "db/data-config",
            "db/data-test"
          ]
        },
        "model": [
          "db",
          "srv"
        ]
      }
      ,
      "API_SALES_ORDER_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/API_SALES_ORDER_SRV",
        "credentials": {
          "[production]": {
            "destination": "SampleCAP-API_SALES_ORDER_SRV",
            "path": "s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          },
          "[development]": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
