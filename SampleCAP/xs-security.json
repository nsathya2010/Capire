{
    "xsappname": "SampleCAP",
    "tenant-mode": "dedicated",
    "scopes": [
        {
            "name": "uaa.user",
            "description": "UAA"
        }
        ,
        {
            "name": "$XSAPPNAME.Viewer",
            "description": "Viewer"
        },
        {
            "name": "$XSAPPNAME.Admin",
            "description": "Administrator"
        }
    ],
    "attributes": [
        {
            "name": "Region",
            "description": "Region",
            "valueType": "string",
            "valueRequired" : "false" 
        }
    ],
    "role-templates": [
        {
            "name": "Token_Exchange",
            "description": "UAA Token Exchange",
            "scope-references": [
                "uaa.user"
            ]
        }
        ,
        {
            "name": "Viewer",
            "description": "Viewer",
            "attribute-references": [
                {
                    "name": "Region"
                }
            ],
            "scope-references": [
                "$XSAPPNAME.Viewer"
            ]
        },
        {
            "name": "Admin",
            "description": "Administrator",
            "scope-references": [
                "$XSAPPNAME.Admin"
            ]
        }
    ]
    ,
    "role-collections": [
        {
            "name": "SampleCAP_Administrator",
            "description": "Administrative access",
            "role-template-references": [
                "$XSAPPNAME.Admin"
            ]
        }
    ]
    ,
    "oauth2-configuration": {
        "token-validity": 3600,
        "redirect-uris": [
            "https://*-SampleCAP-app.cfapps.*.hana.ondemand.com/login/callback"
        ]
    }
}